<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:alpha="0.9"
    android:background="@drawable/bd_loign">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/rounded_edittext1"
        android:cursorVisible="true"
        android:drawablePadding="25sp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="아이디 입력"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="#333333"
        android:textColorHint="@color/login_form_details"
        android:textCursorDrawable="@null"

        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/editText1"
        android:background="#CCCCCC"></View>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText2"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/rounded_edittextbottom"
        android:layout_below="@id/editText1"
        android:textSize="20sp"
        android:textColor="#333333"
        android:cursorVisible="true"
        android:drawablePadding="25dp"
        android:hint="비밀번호 입력"
        android:textColorHint="@color/login_form_details"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:background="@drawable/rounded_button1"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/login_form_details_medium"
        android:textStyle="normal|bold"
        android:layout_below="@id/editText2"
        android:text="로그인"
        />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="회원가입 하기"
        android:textColor="@color/login_form_details"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up"
        android:layout_alignStart="@+id/sign_up"
        android:layout_marginTop="5dp"
        android:text="비밀번호 찾기"
        android:textColor="@color/login_form_details"
        android:textSize="16dp" />


</RelativeLayout>